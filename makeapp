# === Compiler and standard ===
CC := gcc
STD := -std=c17
EXEC = main

SRC := app/src/
LPATH:= CoDec/
INC := $(LPATH)include/
CFLAGS := -Wall -I$(INC)
LFLAGS = -Wl,-rpath,$(LPATH)lib -L$(LPATH)lib -lCoDec
PFLAGS =

%.o: $(SRC)%.c
	$(CC) $(STD) $(CFLAGS) $(PFLAGS) -c $< -o $@


$(EXEC): $(EXEC).o
	$(CC) -o $@ $^ $(LFLAGS)

